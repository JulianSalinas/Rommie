<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/app_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <TextView
        android:id="@+id/people_text"
        android:padding="@dimen/size_default"
        android:background="@color/app_accent_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_searching_for_people"
        android:textStyle="bold"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/people_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/people_text"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideInset"
        android:padding="6dp"
        tools:listitem="@layout/search_item_person"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</RelativeLayout>

