<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:tag=":aesthetic_ignore">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:background="@color/app_white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/schedule_detail_exhibitors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/space_default"
                android:paddingStart="@dimen/space_default"
                android:paddingEnd="@dimen/space_default">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_default"
                    android:layout_marginBottom="@dimen/space_default"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/size_icon"
                            android:layout_height="@dimen/size_icon"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_information"
                            android:backgroundTint="@color/app_primary_font"
                            android:contentDescription="@null" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="60"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="@dimen/space_default"
                        android:paddingEnd="@dimen/space_default"
                        android:text="@string/text_description"
                        android:textSize="@dimen/font_big" />

                    <LinearLayout
                        android:id="@+id/icon_map"
                        android:layout_width="0dp"
                        android:layout_weight="30"
                        android:gravity="end"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/space_small"
                            android:text="@string/text_map"
                            android:textSize="@dimen/font_smallest" />

                        <ImageView
                            android:layout_width="@dimen/size_icon"
                            android:layout_height="@dimen/size_icon"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_map"
                            android:backgroundTint="@color/material_grey"
                            android:contentDescription="@null" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/brief"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_lorem_ipsum" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_line"
                    android:layout_marginTop="@dimen/space_default"
                    android:layout_marginBottom="@dimen/space_default"
                    android:background="@color/app_detail_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_default"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/size_icon"
                            android:layout_height="@dimen/size_icon"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_people"
                            android:backgroundTint="@color/app_primary_font"
                            android:contentDescription="@null" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="90"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="@dimen/space_default"
                        android:paddingEnd="@dimen/space_default"
                        android:text="@string/text_exhibitor"
                        android:textSize="@dimen/font_big" />

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/exhibitor_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/exhibitors_item" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
