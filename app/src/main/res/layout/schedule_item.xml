<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/shedule_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardUseCompatPadding="true"
        android:tag=":aesthetic_ignore">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:orientation="horizontal">

            <View
                android:id="@+id/line"
                android:layout_width="@dimen/space_small"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_cherry"
                android:orientation="horizontal">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/space_medium">

                    <TextView
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="@string/test_event"
                        android:textSize="@dimen/font_normal" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/eventype"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/test_type"
                                android:textSize="@dimen/font_smallest" />

                            <TextView
                                android:id="@+id/schedule_item_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:gravity="end"
                                android:text="@string/test_app_range_time"
                                android:textSize="@dimen/font_smallest" />

                        </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_line"
                    android:background="@color/app_detail_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="75"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/readmore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/space_medium"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/space_medium"
                            android:text="@string/text_readmore"
                            android:tag=":aesthetic_ignore"
                            android:textColor="@color/app_detail" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="25"
                        android:layout_height="match_parent">

                        <com.github.ivbaranov.mfb.MaterialFavoriteButton
                            android:id="@+id/favorite_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            app:mfb_bounce_duration="700"
                            app:mfb_rotation_angle="216"
                            app:mfb_rotation_duration="400" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>


