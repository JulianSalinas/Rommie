<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="imagisoft.rommie.FragmentInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/app_default_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_div_margin"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/text_congress_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/app_div_margin"
                    android:layout_marginStart="@dimen/app_div_margin"
                    android:layout_weight="@dimen/text_weight"
                    android:text="@string/congress"
                    android:textSize="@dimen/font_big"
                    android:textAlignment="center"
                    android:textStyle="italic" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/border_size"
                android:layout_marginBottom="@dimen/app_div_margin"
                android:background="@color/app_light_detail" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_div_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/ic_size"
                        android:layout_height="@dimen/ic_size"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_date"
                        android:contentDescription="@null" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/app_div_margin"
                    android:layout_marginStart="@dimen/app_div_margin"
                    android:layout_weight="90"
                    android:text="@string/date"
                    android:textSize="@dimen/font_big" />

            </LinearLayout>

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_div_margin">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:background="@color/app_detail"
                        android:padding="5dp"
                        android:text="@string/start"
                        android:textColor="@color/app_white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:background="@color/app_detail"
                        android:padding="5dp"
                        android:text="@string/end"
                        android:textColor="@color/app_white" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/shedule_start"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:padding="5dp"
                        android:text="12/08/2018" />

                    <TextView
                        android:id="@+id/shedule_end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:padding="5dp"
                        android:text="18/08/2018" />

                </TableRow>

            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/border_size"
                android:layout_marginBottom="@dimen/app_div_margin"
                android:background="@color/app_light_detail" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_div_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/ic_size"
                        android:layout_height="@dimen/ic_size"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_star"
                        android:contentDescription="@null" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/app_div_margin"
                    android:layout_marginStart="@dimen/app_div_margin"
                    android:layout_weight="90"
                    android:text="@string/presentation"
                    android:textSize="@dimen/font_big" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_presentation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_div_margin"
                android:text="@string/lorem_ipsum" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/border_size"
                android:layout_marginBottom="@dimen/app_div_margin"
                android:background="@color/app_light_detail" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_div_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/ic_size"
                        android:layout_height="@dimen/ic_size"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_location" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/app_div_margin"
                    android:layout_marginStart="@dimen/app_div_margin"
                    android:layout_weight="90"
                    android:text="@string/location"
                    android:textSize="@dimen/font_big" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_div_margin"
                android:text="Sede donde se realizarÃ¡ el congreso" />

            <FrameLayout
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="@dimen/map_size"
                android:background="@color/app_light_detail">
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
