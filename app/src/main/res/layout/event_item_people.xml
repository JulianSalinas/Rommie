<?xml version="1.0" encoding="utf-8"?>

<com.wajahatkarim3.easyflipview.EasyFlipView

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/people_flip_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:flipOnTouch="true"
    app:flipEnabled="true"
    app:flipDuration="400"
    app:flipType="vertical"
    app:flipFrom="front">

    <!-- Back Layout Goes Here -->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/people_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_white"
        android:orientation="vertical">
    </LinearLayout>

    <!-- Front Layout Goes Here -->
    <LinearLayout
        android:id="@+id/people_front"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/size_icon_container"
            android:layout_height="@dimen/size_icon_container">

            <ImageView
                android:src="@drawable/ic_people"
                android:layout_width="@dimen/size_icon"
                android:layout_height="@dimen/size_icon"
                android:layout_centerInParent="true"
                android:tint="@color/app_primary_font"
                android:contentDescription="@null"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/app_accent_light"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/size_small"
                    android:layout_marginStart="@dimen/size_small"
                    android:layout_marginEnd="@dimen/size_small"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/font_medium"
                    android:textStyle="bold"
                    android:text="@string/text_people"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_small"
                    android:layout_marginStart="@dimen/size_small"
                    android:layout_marginEnd="@dimen/size_small"
                    android:text="@string/text_press_to_preview"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/event_people_drop_view"
                android:layout_width="@dimen/size_icon_container"
                android:layout_height="@dimen/size_icon_container"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:src="@drawable/ic_drop"
                    android:tint="@color/app_primary_font"
                    android:layout_width="@dimen/size_icon"
                    android:layout_height="@dimen/size_icon"
                    android:layout_centerInParent="true"
                    android:contentDescription="@null"/>

            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>

</com.wajahatkarim3.easyflipview.EasyFlipView>