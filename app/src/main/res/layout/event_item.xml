<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/schedule_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag=":aesthetic_ignore"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/card_elevation_schedule"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:orientation="horizontal">

            <View
                android:id="@+id/event_decoration"
                android:layout_width="@dimen/space_smallest"
                android:layout_height="match_parent"
                tools:background="@color/app_accent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/space_medium">

                    <TextView
                        android:id="@+id/event_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_small"
                        android:background="@color/app_accent"
                        android:padding="@dimen/space_smallest"
                        android:textSize="@dimen/font_small"
                        android:textColor="@color/app_accent_font"
                        android:textAllCaps="true"
                        android:text="Taller"/>

                    <TextView
                        android:id="@+id/event_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_small"
                        android:text="@string/test_event"
                        android:textSize="@dimen/font_medium" />

                    <TextView
                        android:id="@+id/event_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/test_location"
                        android:fontFamily="sans-serif-light" />

                    <TextView
                        android:id="@+id/event_time_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/test_app_range_time"
                        android:fontFamily="sans-serif-light" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/app_accent_light" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:baselineAligned="true">

                    <RelativeLayout
                        android:id="@+id/event_readmore_container"
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:id="@+id/event_readmore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:tag=":aesthetic_ignore"
                            android:text="@string/text_readmore"
                            android:textColor="@color/app_accent" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="45dp"
                            android:layout_height="match_parent">

                            <com.like.LikeButton
                                app:liked="false"
                                android:id="@+id/event_favorite_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentTop="true"
                                app:icon_size="22dp"
                                app:icon_type="star" />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>