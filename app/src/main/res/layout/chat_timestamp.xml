<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    android:id="@+id/chat_timestamp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_small">

    <android.support.v7.widget.CardView

        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/app_accent_light"
        app:cardCornerRadius="@dimen/card_radius_chat_msg"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_small"
            android:baselineAligned="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chat_timestamp_text"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/space_small"
                android:paddingStart="@dimen/space_small"
                android:textSize="@dimen/font_small"
                android:textColor="@color/app_secondary_font"
                tools:text="@string/test_app_range_time"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>