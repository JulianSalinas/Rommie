<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="imagisoft.rommie.ActivitySplash">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gradient_orange" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_splash_invitation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="@dimen/font_logo"
                android:textAlignment="center"
                android:textColor="@color/app_secondary_font" />

            <TextView
                android:id="@+id/text_splash_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/test_congress"
                android:textSize="@dimen/font_big"
                android:textAlignment="center"
                android:textColor="@color/app_white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/space_medium"
                android:contentDescription="@null"
                android:src="@drawable/form_circle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="@string/test_pressthepoint"
                android:textSize="@dimen/font_normal"
                android:textAlignment="center"
                android:textColor="@color/app_secondary_font" />

        </LinearLayout>

</FrameLayout>
