<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/event_download_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/size_icon_container"
        android:layout_height="@dimen/size_icon_container">

        <ImageView
            android:src="@drawable/ic_download"
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:layout_centerInParent="true"
            android:tint="@color/app_primary_font"
            android:contentDescription="@null"/>

    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/app_accent_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_download_filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold"
            android:text="Nombre de archivo.pdf"/>

        <TextView
            android:id="@+id/event_download_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="120 MB"/>

    </LinearLayout>

</LinearLayout>