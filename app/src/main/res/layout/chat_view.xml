<RelativeLayout

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_wallpaper"
            android:contentDescription="@null"
            android:scaleType="centerCrop">
        </ImageView>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/chat_view_writing_layout">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/chat_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            tools:listitem="@layout/chat_left">
        </android.support.v7.widget.RecyclerView>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/chat_view_writing_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/space_small"
        android:baselineAligned="true"
        android:orientation="horizontal"
        android:background="#00ffffff">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="85"
            app:cardCornerRadius="@dimen/card_radius_chat_input"
            app:cardElevation="1dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_input_view"
                android:hint="@string/text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                android:paddingLeft="@dimen/space_default"
                android:paddingRight="@dimen/space_default"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:tag=":aesthetic_ignore"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/send_card_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/space_small"

            app:cardBackgroundColor="@color/app_primary_dark"
            app:cardCornerRadius="@dimen/card_radius_chat_send"
            app:cardElevation="@dimen/card_elevation_chat">

            <ImageView
                android:src="@android:drawable/ic_menu_send"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="?android:textColorPrimaryInverse"
                android:contentDescription="@null"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>