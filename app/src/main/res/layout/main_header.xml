<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_header_height"
    android:gravity="bottom"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/emphasis_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_header_img"
        android:scaleType="centerCrop"
        android:background="@color/app_detail_light"
        android:contentDescription="@null"
        android:tag=":aesthetic_ignore">
    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/space_header"
        android:orientation="vertical">

        <TextView
            android:id="@+id/current_menu_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_menu"
            android:textColor="@color/material_grey"
            android:textSize="@dimen/font_header_big" />

        <TextView
            android:id="@+id/current_section_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_subsection"
            android:textColor="@color/material_grey"
            android:textSize="@dimen/font_normal"
            android:textStyle="bold" />

    </LinearLayout>

