<android.support.design.widget.CoordinatorLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag=":aesthetic_ignore">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@color/material_grey"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:tag=":aesthetic_ignore">

            <FrameLayout
                android:id="@+id/title_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center_horizontal"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.3"
                android:tag=":aesthetic_ignore">

                <LinearLayout
                    android:id="@+id/title_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space_default"
                        android:lineSpacingExtra="8dp"
                        android:textSize="@dimen/font_big"
                        android:text="@string/text_lorem_ipsum"
                        android:textColor="@android:color/white"
                        android:tag=":aesthetic_ignore"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/space_default"
                            android:paddingEnd="@dimen/space_default"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/eventype_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_conference"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/font_medium"
                                android:fontFamily="sans-serif-light"
                                android:tag=":aesthetic_ignore"/>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </FrameLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:behavior_overlapTop="30dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="@dimen/card_radius_schedule"
                app:cardElevation="@dimen/card_elevation_schedule"
                app:contentPadding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/location_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_small"
                        android:textStyle="bold"
                        android:text="@string/test_location"
                        android:textSize="@dimen/font_big"
                        android:textColor="@color/material_blue_grey"
                        android:tag=":aesthetic_ignore"
                        tools:ignore="RelativeOverlap" />

                    <TextView
                        android:id="@+id/time_descripcion_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_small"
                        android:text="@string/test_app_range_time"
                        android:textColor="@color/material_blue_grey"
                        android:textSize="@dimen/font_medium"
                        android:fontFamily="sans-serif-light"
                        android:tag=":aesthetic_ignore"
                        tools:ignore="RelativeOverlap" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:orientation="horizontal"
                            tools:ignore="RelativeOverlap,UselessParent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="@dimen/space_small"
                                android:text="@string/nav_favorites"
                                android:textColor="@color/material_amber"
                                android:textSize="@dimen/font_small"
                                android:fontFamily="sans-serif-light"
                                android:tag=":aesthetic_ignore"
                                tools:ignore="RelativeOverlap" />

                            <TextView
                                android:id="@+id/favorites_amount_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="123"
                                android:textStyle="bold"
                                android:textColor="@color/material_amber"
                                android:textSize="@dimen/font_small"
                                android:tag=":aesthetic_ignore"
                                tools:ignore="RelativeOverlap" />

                        </LinearLayout>

                    </RelativeLayout>

                    <GridLayout
                        android:id="@+id/grid_exhibitors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:columnOrderPreserved="true">

                    </GridLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="@dimen/card_radius_chat_input"
                app:cardElevation="@dimen/card_elevation_schedule"
                app:contentPadding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_small"
                        android:text="@string/text_abstract"
                        android:textColor="@color/material_blue_grey"
                        android:textSize="@dimen/font_big"
                        android:textStyle="bold"
                        android:tag=":aesthetic_ignore" />

                    <TextView
                        android:id="@+id/brief_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="8dp"
                        android:text="@string/text_lorem_ipsum"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/material_blue_grey"
                        android:textSize="@dimen/font_medium"
                        android:tag=":aesthetic_ignore"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/people_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="@dimen/card_radius_chat_input"
                app:cardElevation="@dimen/card_elevation_schedule"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/people_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/material_indigo"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:tag=":aesthetic_ignore">

        <TextView
            android:id="@+id/main.textview.title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:text="@string/text_edepa"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:tag=":aesthetic_ignore"/>

    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/favorite_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="@dimen/space_default"
        android:layout_marginBottom="@dimen/space_default"
        android:src="@drawable/star_on"
        app:backgroundTint="@color/app_white"
        android:tag=":aesthetic_ignore"/>

</android.support.design.widget.CoordinatorLayout>