<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/info_place_facebook"
    android:orientation="vertical"
    android:paddingBottom="@dimen/size_medium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/size_small"
        android:background="@color/app_accent_light" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/about_icon_facebook"
                android:layout_width="@dimen/size_icon"
                android:layout_height="@dimen/size_icon"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/size_small"
                android:tint="@color/com_facebook_blue"
                android:contentDescription="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/font_small"
                android:textColor="@color/material_blue"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="@string/fui_idp_name_facebook"
                android:tag=":aesthetic_ignore"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_width="@dimen/size_icon"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/size_small"/>

            <TextView
                android:id="@+id/place_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColorLink="@color/app_primary_font"
                tools:text="@string/test_web_page"
                android:autoLink="all"
                android:tag=":aesthetic_ignore"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>