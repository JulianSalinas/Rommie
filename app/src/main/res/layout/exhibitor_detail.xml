<android.support.design.widget.CoordinatorLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_detail_img"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
            app:expandedTitleTextAppearance="@android:color/transparent">

            <ImageView
                android:id="@+id/schedule_detail_top"
                android:contentDescription="@null"
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@color/app_light_detail"/>

            <ImageView
                android:id="@+id/button_back"
                android:layout_width="@dimen/size_icon"
                android:layout_height="@dimen/size_icon"
                android:layout_margin="@dimen/space_default"
                android:background="@drawable/ic_back"
                android:backgroundTint="@color/app_icon"
                android:contentDescription="@null" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/space_default">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <agency.tango.android.avatarview.views.AvatarView
                        android:id="@+id/exhibitor_detail_avatar"
                        android:layout_width="@dimen/avatar_default_width"
                        android:layout_height="@dimen/avatar_default_height"
                        android:layout_margin="@dimen/space_default" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/exhibitor_detail_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="@string/test_exhibitor"
                            android:textColor="@color/app_primary_font"
                            android:textSize="@dimen/font_big" />

                        <TextView
                            android:id="@+id/exhibitor_detail_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/test_dummy"
                            android:textColor="@color/app_primary_font"
                            android:textSize="@dimen/font_small" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/schedule_detail_exhibitors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_default"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_default"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/size_icon"
                        android:layout_height="@dimen/size_icon"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_schedule"
                        android:backgroundTint="@color/app_icon"
                        android:contentDescription="@null" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="90"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="@dimen/space_default"
                    android:paddingEnd="@dimen/space_default"
                    android:text="@string/text_events"
                    android:textSize="@dimen/font_big" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/exhibitors_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/exhibitors_item" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp">
            </View>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
