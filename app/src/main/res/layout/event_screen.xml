<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/app_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_header_detail_img">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_container"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_header_detail_img"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleTextAppearance="@android:color/transparent">

            <com.flaviofaria.kenburnsview.KenBurnsView
                android:id="@+id/toolbar_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/img_pattern"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5"/>

            <RelativeLayout
                android:id="@+id/button_back_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/button_back_image_icon"
                    android:layout_width="@dimen/size_icon"
                    android:layout_height="@dimen/size_icon"
                    android:layout_margin="@dimen/size_default"
                    android:background="@drawable/ic_back"
                    android:contentDescription="@null" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/button_save_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end">

                <ImageView
                    android:id="@+id/button_save_image_icon"
                    android:layout_width="@dimen/size_icon"
                    android:layout_height="@dimen/size_icon"
                    android:layout_margin="@dimen/size_default"
                    android:background="@drawable/ic_save"
                    android:contentDescription="@null" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_default"
                    android:layout_above="@id/favorites_container"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/event_detail_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/size_small"
                        android:background="@color/material_teal"
                        android:padding="@dimen/size_smallest"
                        android:textSize="@dimen/font_small"
                        android:textColor="@color/app_white_font"
                        android:textAllCaps="true"
                        tools:text="Taller"
                        android:tag=":aesthetic_ignore"/>

                    <TextView
                        android:id="@+id/event_detail_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/size_smallest"
                        android:textColor="@color/app_white"
                        android:textAppearance="@style/TextAppearance.Title.Expanded"
                        tools:text="Centro de las artes"
                        android:tag=":aesthetic_ignore"/>

                    <TextView
                        android:id="@+id/event_detail_date_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/test_app_range_time"
                        android:textColor="@color/app_white"
                        android:textAppearance="@style/TextAppearance.Subtitle.Expanded"
                        android:tag=":aesthetic_ignore"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/favorites_container"
                    android:layout_height="56dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true">

                    <LinearLayout
                        android:id="@+id/optional_container"
                        android:layout_height="53dp"
                        android:layout_width="match_parent"
                        android:background="@color/app_accent_translucent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/favorites_amount_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/size_default"
                            android:layout_marginEnd="@dimen/size_small"
                            android:textStyle="bold"
                            android:textColor="@color/app_white_font"
                            android:textAppearance="@style/TextAppearance.Subtitle.Expanded"
                            tools:text="156"
                            android:tag=":aesthetic_ignore"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/nav_favorites"
                            android:textColor="@color/app_white_font"
                            android:textAppearance="@style/TextAppearance.Subtitle.Expanded"
                            android:tag=":aesthetic_ignore"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/emphasis_view"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_below="@+id/optional_container"
                        android:background="@color/material_teal"/>

                </LinearLayout>

            </RelativeLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:background="@color/app_white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_small"
                android:layout_marginTop="@dimen/size_default"
                android:layout_marginStart="@dimen/size_default"
                android:layout_marginEnd="@dimen/size_default"
                android:text="@string/text_title"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_default"
                android:layout_marginStart="@dimen/size_default"
                android:layout_marginEnd="@dimen/size_default"
                android:text="@string/test_congress"
                android:textSize="@dimen/font_big" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/size_default"
                android:background="@color/app_accent_light"/>

            <LinearLayout
                android:id="@+id/event_abstract_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_small"
                    android:layout_marginStart="@dimen/size_default"
                    android:layout_marginEnd="@dimen/size_default"
                    android:text="@string/text_abstract"
                    android:textStyle="italic"
                    android:fontFamily="sans-serif-light"/>

                <TextView
                    android:id="@+id/event_detail_abstract"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_default"
                    android:layout_marginEnd="@dimen/size_default"
                    android:text="@string/text_lorem_ipsum"
                    android:textSize="@dimen/font_medium"/>

            </LinearLayout>

            <include layout="@layout/event_screen_options"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/event_favorite_button"
        android:layout_width="@dimen/size_icon_container"
        android:layout_height="@dimen/size_icon_container"
        android:layout_margin="@dimen/size_default"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@color/app_primary"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|right|end"
        app:srcCompat="@drawable/ic_star" />

</android.support.design.widget.CoordinatorLayout>
