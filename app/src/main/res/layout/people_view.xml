<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/people_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scrollbars="vertical"
        android:scrollbarStyle="outsideInset"

        tools:listitem="@layout/people_item"
        android:tag=":aesthetic_ignore"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_person_button"

        android:layout_width="@dimen/size_icon_container"
        android:layout_height="@dimen/size_icon_container"
        android:layout_margin="@dimen/space_default"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/app_white"
        app:srcCompat="@android:drawable/ic_input_add" />


</RelativeLayout>