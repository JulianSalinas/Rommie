<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_smallest"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/space_default"
            android:paddingEnd="@dimen/space_default"
            android:paddingStart="@dimen/space_default"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_small"
                android:textSize="@dimen/font_big"
                android:textStyle="bold"
                tools:text="@string/text_lorem_ipsum" />

            <TextView
                android:id="@+id/news_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_small"
                tools:text="@string/text_lorem_ipsum" />


        </LinearLayout>

        <ImageView
            android:id="@+id/news_item_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_gmap"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            tools:src="@drawable/img_statistics" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/uploading_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progress_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_smallest"
                android:indeterminate="true"
                android:progressDrawable="@drawable/util_progress_bar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_uploading_image"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_small">

            <TextView
                android:id="@+id/news_item_read_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-light"
                tools:ignore="RelativeOverlap"
                tools:text="523 vistos" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                tools:ignore="RelativeOverlap, UseCompoundDrawables">

                <TextView
                    android:id="@+id/news_item_time_ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="sans-serif-light"
                    tools:ignore="RelativeOverlap"
                    tools:text="hace 4 horas" />

                <ImageView
                    android:id="@+id/news_item_delete"
                    android:src="@drawable/ic_delete"
                    android:tint="@color/app_primary_font"
                    android:layout_width="@dimen/size_icon"
                    android:layout_height="@dimen/size_icon"
                    android:layout_marginStart="@dimen/space_smallest"
                    android:contentDescription="@null" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>