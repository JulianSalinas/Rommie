<resources>

    <!-- Main theme -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorAccent">@color/app_accent</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorControlNormal">@color/app_primary_font</item>

        <item name="windowActionModeOverlay">true</item>
        <!--<item name="android:windowBackground">@drawable/img_wallpaper</item>-->
        <!--<item name="actionMenuTextColor">@accent/app_white</item>-->
        <!--<item name="actionModeBackground">@accent/app_accent</item>-->
        <item name="actionModeCloseDrawable">@drawable/ic_action_navigation_arrow_back_inverted</item>

        <!--<item name="android:textColorLink">@accent/app_accent</item>-->
        <!--<item name="android:textColor">@accent/app_primary_font</item>-->

        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>

    </style>

    <!-- Action Mode Theme -->

    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/app_accent</item>
        <item name="titleTextStyle">@style/ActionModeTitleTextStyle</item>
    </style>

    <style name="ActionModeTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Splash Screen -->

    <style name="AppTheme.SplashTheme">

        <item name="android:windowBackground">@drawable/ic_splashscreen</item>

    </style>

    <!-- Custom ActionBar -->

    <style name="AppTheme.NoActionBar">

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextAppearance.Title.Collapsed" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/app_primary_font</item>
    </style>

    <style name="TextAppearance.Subtitle.Collapsed" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/app_primary_font</item>
    </style>

    <style name="TextAppearance.Title.Expanded" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Subtitle.Expanded" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
