<resources>

    <!-- Main theme -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:actionButtonStyle">@style/ActionButton</item>

        <item name="colorAccent">@color/app_accent</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="android:textColor">#606060</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_action_navigation_arrow_back_inverted</item>

        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="preferenceTheme">@style/AppTheme.Settings</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>

        <!--<item name="android:windowBackground">@color/app_white</item>-->

    </style>

    <!-- Settings theme -->

    <style name="AppTheme.Settings" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:background">@color/app_white</item>
        <item name="android:windowBackground">@color/app_white</item>
    </style>

    <!-- Login Theme -->

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorAccent">@color/app_accent</item>
        <item name="colorPrimary">@color/app_accent</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:buttonStyle">@style/FirebaseUI.Button.Custom</item>
    </style>

    <style name="FirebaseUI.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="FirebaseUI.Text.Link">
        <item name="android:textColor">@color/app_accent</item>
    </style>

    <style name="FirebaseUI.Button.Custom" parent="FirebaseUI.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FirebaseUI.AuthMethodPicker.Logo">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:contentDescription">@string/fui_accessibility_logo</item>
    </style>

    <!-- Firebase Login Themes -->

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:drawablePadding">1dp</item>
    </style>

    <!-- Action Mode Theme -->

    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/app_accent</item>
        <item name="titleTextStyle">@style/ActionModeTitleTextStyle</item>
    </style>

    <style name="ActionModeTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Splash Screen -->

    <style name="AppTheme.SplashTheme">
        <item name="android:windowBackground">@drawable/util_splashs_screen</item>
    </style>

    <!-- Custom ActionBar -->

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="TextAppearance.Title.Expanded" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Subtitle.Expanded" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
